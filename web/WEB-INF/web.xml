<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddMsg</servlet-name>
        <url-pattern>/addmsg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddMsg</servlet-name>
        <servlet-class>AddMsg</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddThema</servlet-name>
        <url-pattern>/addthema</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddThema</servlet-name>
        <servlet-class>AddThema</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewThema</servlet-name>
        <url-pattern>/viewthema</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewThema</servlet-name>
        <servlet-class>ViewThema</servlet-class>
    </servlet>


</web-app>